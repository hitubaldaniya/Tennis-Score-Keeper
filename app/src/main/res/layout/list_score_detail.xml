<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.hitesh.design.MainActivity"
    android:background="#34a853">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/matchTime"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/winner"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="Player won the match" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/centerPart0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp">



                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Won"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:id="@+id/txtTitle"
                    android:layout_weight="1.50"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:autoText="false"
                    android:background="#35CE50" />

                <TextView
                    android:id="@+id/player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Player 1"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#D32F2F"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/player2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#1976D2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerPart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginTop="15dp">



                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Sets"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:id="@+id/wonSet"
                    android:layout_weight="1.50"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:autoText="false"
                    android:background="#35CE50"
                    android:textIsSelectable="false" />

                <TextView
                    android:id="@+id/player1set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#D32F2F"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/player2set"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#1976D2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerPart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Games"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:layout_weight="1.50"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/wonGames"
                    android:background="#35CE50" />

                <TextView
                    android:id="@+id/player1game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="#D32F2F" />

                <TextView
                    android:id="@+id/player2game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#1976D2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerPart3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Points"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:layout_weight="1.50"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/wonPoints"
                    android:background="#35CE50" />

                <TextView
                    android:id="@+id/player1point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="#D32F2F" />

                <TextView
                    android:id="@+id/player2point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#1976D2" />

            </LinearLayout>

        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:id="@+id/btnReturn"
            android:layout_gravity="center_horizontal"
            android:background="#80000000"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:onClick="btnReturn" />

    </LinearLayout>

</RelativeLayout>