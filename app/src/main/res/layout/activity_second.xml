<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.android.hitesh.design.MainActivity"
        android:background="@drawable/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outPut"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTimer"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayoutbtn"
            android:layout_marginTop="10dp"
            android:touchscreenBlocksFocus="false"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/btnStart"
                android:layout_weight="1"
                android:background="#3f51b5"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:onClick="startTimer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/btnReset"
                android:layout_weight="1"
                android:background="#3f51b5"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player1Txt"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player2Txt"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_below="@+id/linearLayouttimer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/centerPart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Player 1"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:id="@+id/player1name"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#D32F2F"
                    android:autoText="false" />

                <TextView
                    android:id="@+id/player1Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#D32F2F"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/player1Total1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#D32F2F"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/player1Total2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#D32F2F" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerPart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Player 2"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:id="@+id/player2name"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="#1976D2" />

                <TextView
                    android:id="@+id/player2Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="#1976D2" />

                <TextView
                    android:id="@+id/player2Total1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:layout_marginRight="5dp"
                    android:background="#1976D2" />

                <TextView
                    android:id="@+id/player2Total2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:maxWidth="1dp"
                    android:background="#1976D2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btnWon"
            android:layout_marginTop="10dp"
            android:touchscreenBlocksFocus="false"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 won"
                    android:id="@+id/player1Btn"
                    android:background="#D32F2F"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:allowUndo="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_marginLeft="77dp"
                    android:layout_marginStart="77dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="PlayerOneWonClicked" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 won"
                    android:id="@+id/player2Btn"
                    android:background="#1976D2"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/player1Btn"
                    android:layout_toEndOf="@+id/player1Btn"
                    android:onClick="PlayerTwoWonClicked" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btnExitUndo"
            android:layout_marginTop="25dp"
            android:touchscreenBlocksFocus="false"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:id="@+id/btnExit"
                    android:background="#80000000"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:allowUndo="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:width="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="gameBack" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Undo"
                    android:id="@+id/btnUndo"
                    android:background="#80000000"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:width="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="functionUndo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset All"
                    android:id="@+id/resetAll"
                    android:background="#80000000"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:width="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="resetAll" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
